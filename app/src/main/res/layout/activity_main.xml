<?xml version="1.0" encoding="utf-8"?>
<RelativeLayoout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounds"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp49"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/white"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/home_select"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="首页"
            android:textColor="@drawable/textcolor_select"
            android:textSize="@dimen/dp10" />

        <RadioButton
            android:id="@+id/rb_nearby"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/nearby_select"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="附近"
            android:textColor="@drawable/textcolor_select"
            android:textSize="@dimen/dp10" />

        <RadioButton
            android:id="@+id/rb_rbate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rebate_select"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="返利"
            android:textColor="@drawable/textcolor_select"
            android:textSize="@dimen/dp10" />

        <RadioButton
            android:id="@+id/rb_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/me_select"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="我的"
            android:textColor="@drawable/textcolor_select"
            android:textSize="@dimen/dp10" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/add_frament_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/radioGroup"></FrameLayout>
</RelativeLayoout>
