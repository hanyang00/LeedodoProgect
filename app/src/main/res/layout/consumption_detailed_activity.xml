<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/backgrounds"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorBule"
        android:layout_height="@dimen/dp45">

        <ImageView
            android:layout_marginLeft="@dimen/dp5"
            android:id="@+id/replace_phone_break"
            android:layout_width="@dimen/dp34"
            android:layout_height="@dimen/dp34"
            android:background="@mipmap/backss"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:textSize="@dimen/sp18"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="消费记录"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </RelativeLayout>

    <RelativeLayout
        android:background="@color/colorBule"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp180">
        
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp45"
            android:background="@drawable/shapro_breakgount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp125">

            <TextView
                android:id="@+id/commodity_name"
                android:textColor="@color/existingtextcolor"
                android:textSize="@dimen/sp18"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp25"
                android:text="肯德基（胜古南里）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_below="@+id/commodity_name"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp40"
                android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/existingtextcolor"
                android:textSize="@dimen/sp25"
                android:text="58.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <TextView
                    android:textSize="@dimen/sp18"
                    android:text=" 元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp44">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/existingtextcolor"
            android:textSize="@dimen/sp14"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dp15"
            android:text="付款方式"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="1"
            android:textColor="@color/existingtextcolor"
            android:textSize="@dimen/sp14"
            android:gravity="center|right"
            android:layout_marginLeft="@dimen/dp15"
            android:text="支付宝"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>



    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp44">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/existingtextcolor"
            android:textSize="@dimen/sp14"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dp15"
            android:text="创建时间"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="1"
            android:textColor="@color/existingtextcolor"
            android:textSize="@dimen/sp14"
            android:gravity="center|right"
            android:layout_marginLeft="@dimen/dp15"
            android:text="2017-8-12 09:24:35"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp44">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/existingtextcolor"
            android:textSize="@dimen/sp14"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dp15"
            android:text="交易编号"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="1"
            android:textColor="@color/existingtextcolor"
            android:textSize="@dimen/sp14"
            android:gravity="center|right"
            android:layout_marginLeft="@dimen/dp15"
            android:text="*********"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp44">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/existingtextcolor"
            android:textSize="@dimen/sp14"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dp15"
            android:text="退款状态"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="1"
            android:textColor="@color/existingtextcolor"
            android:textSize="@dimen/sp14"
            android:gravity="center|right"
            android:layout_marginLeft="@dimen/dp15"
            android:text="退款处理中"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>



    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp44">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/existingtextcolor"
            android:textSize="@dimen/sp14"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dp15"
            android:text="交易评分"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="1"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp14"
            android:gravity="center|right"
            android:layout_marginLeft="@dimen/dp15"
            android:text="3.5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
