<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/backgrounds"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/white">

        <ImageView
            android:layout_marginLeft="@dimen/dp5"
            android:id="@+id/forgot_break"
            android:layout_width="@dimen/dp34"
            android:layout_height="@dimen/dp34"
            android:background="@mipmap/backss"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="@color/colorLight"
            android:textSize="@dimen/sp18" />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp65"
        android:layout_marginTop="@dimen/dp20"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp17"
            android:src="@mipmap/shouji" />

        <EditText
            android:id="@+id/ed_forgot_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toLeftOf="@+id/register_obtain"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_weight="0.34"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColorHint="@color/colorMyEditHint" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp65"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp17"
            android:src="@mipmap/yanzhengma" />


        <EditText
            android:id="@+id/ed_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_toLeftOf="@+id/register_obtain"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_weight="0.34"
            android:background="@null"
            android:hint="短信验证码"
            android:textColorHint="@color/colorMyEditHint" />

        <Button
            android:id="@+id/forgot_getcode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="获取验证码"
            android:textColor="@color/colorMyEditHint"
            android:textSize="@dimen/sp14"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp65"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp17"
            android:src="@mipmap/mima" />

        <EditText
            android:id="@+id/ed_forgot_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_toLeftOf="@+id/register_obtain"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_weight="0.34"
            android:background="@null"
            android:hint="请输入新密码"
            android:textColorHint="@color/colorMyEditHint" />

        <CheckBox
            android:id="@+id/forgot_looks"
            android:layout_width="@dimen/dp23"
            android:layout_height="@dimen/dp15"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            android:background="@drawable/password_select"
            android:button="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp65"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp17"
            android:src="@mipmap/mima" />

        <EditText
            android:id="@+id/ed_forgot_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_toLeftOf="@+id/register_obtain"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_weight="0.34"
            android:background="@null"
            android:hint="确认密码"
            android:textColorHint="@color/colorMyEditHint" />
    </RelativeLayout>

    <Button
        android:id="@+id/forgot_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp35"
        android:background="@drawable/shapro_login"
        android:text="重置密码"
        android:textColor="@color/textcolortrue" />
</LinearLayout>
