<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounds"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/white">

        <ImageView
            android:layout_marginLeft="@dimen/dp5"
            android:id="@+id/register_break"
            android:layout_width="@dimen/dp34"
            android:layout_height="@dimen/dp34"
            android:background="@mipmap/backss"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="短信验证登录"
            android:textColor="@color/colorLight"
            android:textSize="@dimen/sp18" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginTop="@dimen/dp20"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp17"
            android:src="@mipmap/shouji" />

        <EditText
            android:id="@+id/ed_register_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toLeftOf="@+id/register_obtain"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_weight="0.34"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColorHint="@color/colorMyEditHint" />

        <TextView
            android:id="@+id/register_obtain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            android:text="获取验证码"
            android:textColorHint="@color/colorMyEditHint" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp15"
            android:src="@mipmap/yanzhengma" />

        <EditText
            android:id="@+id/ed_register_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_weight="0.34"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColorHint="@color/colorMyEditHint" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp15"
            android:src="@mipmap/mima" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_weight="0.34"
            android:background="@null"
            android:hint="请输入密码"
            android:textColorHint="@color/colorMyEditHint" />

        <CheckBox
            android:id="@+id/register_looks"
            android:layout_width="@dimen/dp23"
            android:layout_height="@dimen/dp15"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            android:background="@drawable/password_select"
            android:button="@null" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp10"
        android:text="未注册的手机号登录成功后讲自动注册为大道用户"
        android:textColor="@color/colorMyEditHint"
        android:textSize="@dimen/sp12" />

    <Button
        android:id="@+id/register_login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/shapro_login"
        android:text="登录"
        android:textColor="@color/textcolortrue" />


    <TextView
        android:id="@+id/register_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:text="其他方式登录"
        android:textColor="@color/colorMyEditHint" />

    <TextView
        android:id="@+id/register_check"
        android:textColor="@color/colorRed"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp15">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录即表示您同意大道"
                android:textColor="@color/colorMyEditHint" />

            <TextView
                android:id="@+id/register_agreement"
                android:textColor="#0156ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
