<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/user_breakgrund"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp190"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/user_now_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginTop="@dimen/dp50"
        android:text="立即登录"
        android:textColor="@color/regular"
        android:textSize="@dimen/sp25" />

    <ImageView
        android:id="@+id/user_collection_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_now_login"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginTop="@dimen/dp37"
        android:src="@mipmap/shoukuanma" />

    <ImageView

        android:id="@+id/user_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_collection_code"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/yue" />

    <ImageView
        android:id="@+id/user_card_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/user_balance"
        android:layout_marginRight="@dimen/dp50"
        android:src="@mipmap/kabao" />

    <TextView
        android:id="@+id/now_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp27"
        android:text="用户名"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/now_user_name"
        android:layout_alignBottom="@+id/now_user_name"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toEndOf="@+id/now_user_name"
        android:layout_toRightOf="@+id/now_user_name"
        android:text="1213242"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/now_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/now_user_name"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:text="手机号"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_name"
        android:layout_alignStart="@+id/user_name"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="@dimen/dp15"
        android:text="158****1639"
        android:textSize="@dimen/sp14" />


    <RelativeLayout
        android:id="@+id/user_security_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp65"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_breakgrund"
        android:background="@color/white">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp15"
            android:gravity="center"
            android:text="安全设置"
            android:textColor="@color/colorLight" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:src="@mipmap/gengduo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp65"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_about_us"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp15"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/colorLight" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:src="@mipmap/gengduo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_about_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp65"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_pecords_of_consumption"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp15"
            android:gravity="center"
            android:text="关于我们"
            android:textColor="@color/colorLight" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:src="@mipmap/gengduo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_pecords_of_consumption"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp65"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_security_setting"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp15"
            android:gravity="center"
            android:text="消费记录"
            android:textColor="@color/colorLight" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:src="@mipmap/gengduo" />

    </RelativeLayout>
</RelativeLayout>
