<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#dedcdc"
              android:orientation="vertical">
    <!--引导图标  文字-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nerby_tab_all_imv1"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/nerby_tab_all_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:text="美食"
            android:textColor="@color/colorlightTimeText"
            android:textSize="@dimen/sp14"
            />
    </LinearLayout>

    <GridView
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp13"
        android:id="@+id/nerby_tab_all_gridview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
    />

    <!--第二个  引导图标  文字-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nerby_tab_all2_imv"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/nerby_tab_all2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:text="美食"
            android:textColor="@color/colorlightTimeText"
            android:textSize="@dimen/sp14"
            />
    </LinearLayout>

    <GridView
        android:id="@+id/nerby_tab_all_gridview2"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
        />

</LinearLayout>
