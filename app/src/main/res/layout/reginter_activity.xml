<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounds"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/white">

        <ImageView
            android:id="@+id/register_break"
            android:layout_width="@dimen/dp34"
            android:layout_height="@dimen/dp34"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp5"
            android:background="@mipmap/backss" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/colorLight"
            android:textSize="@dimen/sp18" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp150">

        <ImageView
            android:layout_width="@dimen/dp91"
            android:layout_height="@dimen/dp93"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp30"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white">


        <EditText
            android:id="@+id/ed_register_phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp44"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/imageView"
            android:background="@color/white"
            android:hint="请输入新的手机号"
            android:paddingLeft="@dimen/dp15"
            android:textColorHint="@color/colorMyEditHint"
            android:textSize="@dimen/sp14">

        </EditText>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp15"
            android:src="@mipmap/shouji" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_register_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="3"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:paddingLeft="@dimen/dp15"
            android:textColorHint="@color/colorMyEditHint"
            android:textSize="@dimen/sp14" />


        <Button
            android:id="@+id/register_obtain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorMyEditHint"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white">


        <EditText
            android:id="@+id/register_password"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp44"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/register_looks"
            android:background="@color/white"
            android:hint="设置密码"
            android:paddingLeft="@dimen/dp15"
            android:textColorHint="@color/colorMyEditHint"
            android:textSize="@dimen/sp14">

        </EditText>

        <CheckBox
            android:id="@+id/register_looks"
            android:layout_width="@dimen/dp23"
            android:layout_height="@dimen/dp15"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp15"
            android:background="@drawable/password_select"
            android:button="@null" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:checked="true"
            android:id="@+id/register_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意大道"
            android:textColor="@color/colorLight"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/register_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <Button
        android:layout_marginTop="@dimen/dp16"
        android:id="@+id/register_login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@drawable/shapro_login"
        android:text="注册"
        android:textColor="@color/textcolortrue" />


    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:id="@+id/register_check"
        android:textColor="@color/colorRed"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
