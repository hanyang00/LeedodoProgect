<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/white">

        <ImageView
            android:layout_marginLeft="@dimen/dp5"
            android:id="@+id/replace_phone_break"
            android:layout_width="@dimen/dp34"
            android:layout_height="@dimen/dp34"
            android:background="@mipmap/backss"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="更换手机"
            android:textColor="@color/colorLight"
            android:textSize="@dimen/sp18" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white">


        <EditText
            android:id="@+id/et_replace_new_phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp44"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/imageView"
            android:background="@color/white"
            android:hint="请输入新的手机号"
            android:paddingLeft="@dimen/dp15"
            android:textColorHint="@color/colorMyEditHint"
            android:textSize="@dimen/sp14">

        </EditText>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp15"
            android:src="@mipmap/shouji" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp44">
        <EditText
            android:id="@+id/et_replace_code"
            android:layout_marginRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp15"
            android:layout_weight="3"
            android:background="@color/white"
            android:textSize="@dimen/sp14"
            android:textColorHint="@color/colorMyEditHint"
            android:hint="请输入验证码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/et_replace_btn"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="@dimen/sp14"
            android:textColor="@color/colorMyEditHint"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/et_replace_yes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp35"
        android:background="@drawable/shapro_login"
        android:text="确定"
        android:textColor="@color/textcolortrue" />


</LinearLayout>
